<%- include partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">

  <h1 class="display-6"><%= title %></h1>

  <hr>
  <form class="form" method="POST">
    <div class="form-group mb-3">
      <label for="questionTextField">Question: </label>
      <input type="text" class="form-control" id="questionTextField" value="<%=Question.QuestionText %> "
        name="questionTxt" required>
    </div>
    <button class="btn btn-success" type="submit">
      
      Submit
    </button>

    <a href="/survey-detail/<%=Survey._id%>" class="btn btn-secondary">
       Cancel
    </a>
  </form>
</main>

